<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/floating_spacing_lg"
    app:maxHeightPercent="0.85"
    app:maxWidthPercent="0.9">

    <!-- 标题 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_text"
        style="@style/FloatingText.H2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_md"
        android:text="偏移量计算" />

    <!-- 基址信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_sm"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基址: "
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_base_address"
            style="@style/FloatingText.Address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textIsSelectable="true" />

    </LinearLayout>

    <!-- 异或结果 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_sm"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="偏移XOR: "
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_xor_result"
            style="@style/FloatingText.Monospace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF9800"
            android:textIsSelectable="true" />

    </LinearLayout>

    <!-- 统计信息 -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_stats"
        style="@style/FloatingText.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_md" />

    <!-- 分割线 -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_sm"
        app:dividerColor="@color/floating_divider" />

    <!-- 表头 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/floating_spacing_xs"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/floating_spacing_xs">

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="范围"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="地址"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="偏移量"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/FloatingText.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="增量"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 偏移量列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offset_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- 分割线 -->
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/floating_spacing_sm"
        android:layout_marginBottom="@dimen/floating_spacing_md"
        app:dividerColor="@color/floating_divider" />

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_copy"
            style="@style/FloatingButton.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/FloatingButton.Text.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭" />

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
