<?xml version="1.0" encoding="utf-8"?>
<moe.fuqiuluo.mamu.widget.FixedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="horizontal"
    app:maxHeightPercent="0.85"
    app:maxWidthPercent="0.9"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="4dp"
            android:text="@string/search_dialog_title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/subtitle_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="12dp"
            android:text="@string/search_dialog_subtitle"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/label_value"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btn_operator"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_settings_card"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/symbol_equals"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_value"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="none"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textColor="#FFFFFF"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp">

                    <requestFocus />
                </EditText>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:dividerColor="#33FFFFFF" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_base"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:contentDescription="@string/content_desc_convert_hex"
                app:icon="@drawable/icon_arrow_drop_down_24px"
                app:iconPadding="0dp"
                app:iconGravity="textStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/label_type"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btn_value_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_transparent_border"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/description_auto_type"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_is_deeply_search"
                style="@style/FloatingCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_deep_search"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_search_all_memory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_settings_card"
            android:text="@string/label_search_all_memory"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        app:dividerColor="#33FFFFFF" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <moe.fuqiuluo.mamu.widget.BuiltinKeyboard
            android:id="@+id/builtin_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/button_cancel"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="@string/button_new_search"
                android:textColor="#2196F3" />
        </LinearLayout>

    </LinearLayout>

</moe.fuqiuluo.mamu.widget.FixedLinearLayout>
